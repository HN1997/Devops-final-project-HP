<h1>{{user.first_name}} {{user.last_name}} [{{user.id}}]</h1>
<ul class="list-group">
    <li class="list-group-item"><strong>Email: </strong>{{user.email}}</li>
    <li class="list-group-item"><strong>Phone number: </strong>{{user.phone}}</li>
</ul>
<a class="btn btn-default pull-left" href="/">Back</a>
<form method="POST" action="/user/delete/{{user.id}}?_method=DELETE">
    <input type="submit" class="btn btn-danger pull-right" value="Delete this user">
</form>

<h3>Change this user:</h3>
<form method="POST" action="/user/update/{{user.id}}">
    <div class="form-group">
        <label>New First Name</label>
        <input type="text" class="form-control" name="first_name" placeholder="First Name" value={{user.first_name}}>
    </div>
    <div class="form-group">
        <label>New Last Name</label>
        <input type="text" class="form-control" name="last_name" placeholder="Last Name" value={{user.last_name}}>
    </div>
    <div class="form-group">
        <label>New Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email Address" value={{user.email}}>
    </div>
    <div class="form-group">
        <label>New Phone</label>
        <input type="text" class="form-control" name="phone" placeholder="Phone Number" value={{user.phone}}>
    </div>
    <input type="submit" class="btn btn-primary" value="Save">
</form>